---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout>
  <Fragment slot="title">Tableaux avancés</Fragment>

  <h2>Table triable</h2>
  <table class="table sortable">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Âge</th>
        <th>Ville</th>
      </tr>
    </thead>
    <tbody>
      <tr><td>Alice</td><td>28</td><td>Paris</td></tr>
      <tr><td>Bob</td><td>34</td><td>Lyon</td></tr>
    </tbody>
  </table>

  <h2>Table sticky header</h2>
  <div class="table-sticky">
    <table>
      <thead>
        <tr><th>Nom</th><th>Statut</th></tr>
      </thead>
      <tbody>
        <tr><td>Alice</td><td>Actif</td></tr>
        <tr><td>Bob</td><td>Inactif</td></tr>
      </tbody>
    </table>
  </div>
</BaseLayout>