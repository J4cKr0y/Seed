---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout>
  <Fragment slot="title">Wizard multi‑étapes</Fragment>

  <h1>Wizard multi‑étapes</h1>

  <div class="steps">
    <div class="step active">
      <div class="step-circle">1</div>
      <p>Infos</p>
    </div>
    <div class="step">
      <div class="step-circle">2</div>
      <p>Adresse</p>
    </div>
    <div class="step">
      <div class="step-circle">3</div>
      <p>Confirmation</p>
    </div>
  </div>

  <form class="form-sections">
    <section>
      <h3>Informations personnelles</h3>
      <label>Nom</label>
      <input type="text">
      <label>Email</label>
      <input type="email">
    </section>

    <button class="btn btn-primary">Étape suivante</button>
  </form>
</BaseLayout>